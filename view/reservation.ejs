  font-weight: bold;
  font-size: 14px;
  color: rgb(0, 0, 0);
}

.gate span{
  color: rgb(0, 0, 0);
  font-size: 17px;
}

.seat{
  position: absolute;
  top: 10px;
  left: 350px;
  font-weight: bold;
  font-size: 14px;
  color: #999;
}

.seat span{
  color: rgb(0, 0, 0);
  font-size: 17px;
}

.boardingtime{
  position: absolute;
  top: 60px;
  left: 10px;
  font-weight: bold;
  font-size: 14px;
  color: rgb(0, 0, 0);
}

.boardingtime span{
  color: rgb(211, 0, 0);
  font-size: 17px;
}

.slip{
  left: 455px;
}

.nameslip{
  top: 60px;
  left: 410px;
}

.flightslip{
  left: 410px;
}

.seatslip{
  left: 540px;
}

.jfkslip{
  font-size: 30px;
